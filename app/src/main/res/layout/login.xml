<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/login_page">

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">


        <com.andreabaccega.widget.FormEditText
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Email"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#A8A8A8"
            android:textColorHint="#A8A8A8"
            android:textSize="15dp"
            whatever:customRegexp="[a-zA-Z0-9]{1,}"
            whatever:emptyErrorString="Email must not empty"
            whatever:testErrorString="Invalid Email"
            whatever:testType="regexp" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view3"
        android:layout_marginTop="15dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">


        <com.andreabaccega.widget.FormEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Password"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#A8A8A8"
            android:textColorHint="#A8A8A8"
            android:textSize="15dp"
            whatever:customRegexp="[a-zA-Z0-9]{1,}"
            whatever:emptyErrorString="Password must not empty"
            whatever:testErrorString="Invalid Password"
            whatever:testType="regexp" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/btnLogin"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="13sp"
        custom:pb_colorComplete="#644099"
        android:layout_marginTop="20dp"
        custom:pb_colorError="@color/red_error"
        custom:pb_colorNormal="#644099"
        custom:pb_colorPressed="#644099"
        custom:pb_colorProgress="#644099"
        custom:pb_textComplete="Success"
        custom:pb_textError="Error"
        custom:pb_textProgress="Loading"
        android:layout_below="@+id/view2"
        android:layout_gravity="center_horizontal" />

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/btnRegister"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="10dp"
        android:text="Register"
        custom:pb_colorComplete="#644099"
        android:textSize="13sp"
        custom:pb_colorError="@color/red_error"
        custom:pb_colorNormal="#644099"
        custom:pb_colorPressed="#644099"
        custom:pb_colorProgress="#644099"
        custom:pb_textComplete="Success"
        custom:pb_textError="Error"
        custom:pb_textProgress="Loading"
        />

</LinearLayout>