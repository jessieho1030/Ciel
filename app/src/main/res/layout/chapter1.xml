<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="4dp"

    >
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#086A87"
        android:text="@string/chapter1_title"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chapter1_content1"
        android:textSize="20dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/employee"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/department"
        />
    <View android:layout_height="4dp"
        android:layout_width="match_parent"
        android:background="@color/border"></View>
    <!--Inner Join-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n1.	(INNER) JOIN: Returns records that have matching values in both tables"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/inner"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chapter1_content2"
        android:textSize="20dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/example1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0B2F3A"
        android:textStyle="italic"
        android:text="Result : "
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/solution1"/>
    <View android:layout_height="4dp"
        android:layout_width="match_parent"
        android:background="@color/border"></View>
    <!--Left Join-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n2.	LEFT (OUTER) JOIN: Return all records from the left table, and the matched records from the right table"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/left"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chapter1_content3"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/example2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="#0B2F3A"
        android:text="Result : "
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/solution2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="italic"
        android:text="The LEFT JOIN will show all the record of the related table even the record has no linkage with another table, such as the last record shown above."/>

    <View android:layout_height="4dp"
        android:layout_width="match_parent"
        android:background="@color/border"></View>
        <!--Right Join-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n3.	RIGHT (OUTER) JOIN: Return all records from the right table, and the matched records from the left table"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/right"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chapter1_content4"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/example3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="#0B2F3A"
        android:text="Result : "
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/solution3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textStyle="italic"
        android:text="The RIGHT JOIN will show all the record of the related table even the record has no linkage with another table, such as the last record shown above."
        />
    <View android:layout_height="4dp"
        android:layout_width="match_parent"
        android:background="@color/border"></View>
    <!--Full Join-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n4.	FULL (OUTER) JOIN: Return all records when there is a match in either left or right table"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/full"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chapter1_content5"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/example4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="#0B2F3A"
        android:text="Result : "
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/solution4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textStyle="italic"
        android:text="For FULL OUTER JOIN, all the record will be shown as above even the records without linkage."
        />
    
</LinearLayout>
</ScrollView>