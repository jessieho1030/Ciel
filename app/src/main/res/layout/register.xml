<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAF2FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account"
            android:textSize="21sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/user_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/users"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/user_img">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/usernameText"
                    android:layout_width="match_parent"
                    android:maxLength="20"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="Username"
                    android:imeOptions="actionGo"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="15dp"
                    whatever:customRegexp="[a-zA-Z0-9]{8,}"
                    whatever:emptyErrorString="Username must not empty"
                    whatever:testErrorString="Invalid username"
                    whatever:testType="regexp" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/password_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/password"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/password_img">
                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/passwordText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="20"
                        android:ems="10"
                        android:hint="Password"
                        android:imeOptions="actionGo"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textSize="15dp"
                        whatever:customRegexp="[a-zA-Z0-9]{8,}"
                        whatever:emptyErrorString="Password must not empty"
                        whatever:testErrorString="Invalid Password"
                        whatever:testType="regexp" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/repassword_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/confirm_password"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/repassword_img">
                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/repasswordText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:maxLength="20"
                    android:hint="Confirm password"
                    android:imeOptions="actionGo"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="15dp"
                    whatever:customRegexp="[a-zA-Z0-9]{8,}"
                    whatever:emptyErrorString="Password must not empty"
                    whatever:testErrorString="Invalid Password"
                    whatever:testType="regexp" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/type_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/type"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/type_img">
                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/typeText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:maxLength="20"
                    android:hint="User Type"
                    android:imeOptions="actionGo"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="15dp"
                    whatever:customRegexp="^([Teacher]|[Student])"
                    whatever:emptyErrorString="User Type must not empty"
                    whatever:testErrorString="Invalid User Type"
                    whatever:testType="regexp" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>
        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/btnSubmit"
            android:layout_width="340dp"
            android:maxLength="50"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="13sp"
            whatever:pb_colorComplete="#644099"
            android:layout_marginTop="100dp"
            whatever:pb_colorError="@color/red_error"
            whatever:pb_colorNormal="#644099"
            whatever:pb_colorPressed="#644099"
            whatever:pb_colorProgress="#644099"
            whatever:pb_textComplete="Success"
            whatever:pb_textError="Error"
            whatever:pb_textProgress="Loading"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</ScrollView>