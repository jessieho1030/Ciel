<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/tutorial0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:clickable="true"
            >
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Quiz 1 : Basic"
                android:textSize="36dp"></TextView>

        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"></View>
        <RelativeLayout
            android:id="@+id/tutorial1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:clickable="true"
            >
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Quiz 2 : Join"
                android:textSize="36dp"></TextView>

        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"></View>
        <RelativeLayout
            android:id="@+id/tutorial2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:clickable="true">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Quiz  3 : Aggregate"
                android:textSize="36dp"></TextView>

        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"></View>
        <RelativeLayout
            android:id="@+id/tutorial3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:clickable="true">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Quiz 4 : Sub-Query"
                android:textSize="36dp"></TextView>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
